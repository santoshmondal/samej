<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

	<include file="struts-session-global.xml" />
	
	<package name="superadminpackage" namespace="/" extends="json-default">
		<action name="superAdmin" method="superAdmin" class="com.samej.stateful.actions.SuperAdminAction">
			<result type='json' />
		</action>
	</package>
	

	<!-- SAMPLE SESSION Level Action -->
	<package name="sample-session-package" namespace="/" extends="session-default">
		<action name="2">
			<result>/sample/sample.jsp</result>
		</action>
		
		<action name="sessionAction" class="com.samej.stateful.actions.SampleAction" method="sessionAction">
			<result>/sample/sample.jsp</result>
		</action>
	</package>
	<!-- SAMPLE DEFAULT TEMPLATE -->
	<package name="sample-default" namespace="/" extends="struts-default">
		<action name="1">
			<result>/sample/sample.jsp</result>
		</action>
		
		<action name="sampleAction" class="com.samej.stateful.actions.SampleAction" method="sampleAction">
			<result>/sample/sample.jsp</result>
		</action>
	</package>
</struts>    